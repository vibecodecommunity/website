---
import type { CodeBlockProps } from '@/lib/utils';

interface Props extends CodeBlockProps {}

const { code, language = 'typescript', title, lineNumbers, wrap, highlightLines } = Astro.props;
---

<div class="code-block-wrapper my-4 overflow-hidden rounded-lg border border-neutral-200 dark:border-neutral-800">
  {title && (
    <div class="code-block-title bg-neutral-100 px-4 py-2 text-sm font-medium text-neutral-700 dark:bg-neutral-800/50 dark:text-neutral-300">
      {title}
    </div>
  )}
  <pre
    class:list={[
      "code-block astro-code",
      { "whitespace-pre-wrap": wrap },
      { "overflow-x-auto": !wrap }
    ]}
    data-language={language}
    data-theme="auto"
    {...(highlightLines ? {"data-highlighted-lines": highlightLines} : {})}
  >
    <code class={`language-${language}`}>{code}</code>
  </pre>
</div> 